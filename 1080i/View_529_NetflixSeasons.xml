			<texture background="true" diffuse="home/home_matte2.png">$VAR[LandscapeImage]</texture>
			<bordertexture colordiffuse="$PARAM[colordiffuse]">home/home_matte2.png</bordertexture>
			<aspectratio scalediffuse="false" aligny="center" align="center">scale</aspectratio>
			<bordersize>$PARAM[bordersize]</bordersize>
		</control>
		<control type="group">
			<control type="progress">
				<texturebg colordiffuse="dimgrey">diffuse/panel.png</texturebg>
				<midtexture colordiffuse="$INFO[Skin.String(ViewNetfixHighlightTextColor)]">diffuse/panel.png</midtexture>
				<width>100%</width>
				<bottom>-4%</bottom>
				<height>3</height>
				<visible>Integer.IsGreater(ListItem.PercentPlayed,0)</visible>
				<info>ListItem.PercentPlayed</info>
			</control>
			<control type="image">
				<bottom>-4%</bottom>
				<height>3</height>
				<texture colordiffuse="$INFO[Skin.String(ViewNetfixHighlightTextColor)]">diffuse/panel.png</texture>
				<visible>Integer.IsGreater(ListItem.PlayCount,0) + !ListItem.IsResumable</visible>
			</control>
			<control type="image">
				<bottom>-4%</bottom>
				<height>3</height>
				<texture colordiffuse="dimgrey">diffuse/panel.png</texture>
				<visible>!Integer.IsGreater(ListItem.PlayCount,0) + !ListItem.IsResumable</visible>
			</control>
		</control>
	</include>
	
	<variable name="TVShowArt">
		<value condition="!String.IsEmpty(ListItem.Art(tvshow.landscape))">$INFO[ListItem.Art(tvshow.landscape)]</value>
		<value condition="!String.IsEmpty(ListItem.Art(tvshow.fanart))">$INFO[ListItem.Art(tvshow.fanart)]</value>
		<value>$INFO[ListItem.Art(thumb)]</value>
	</variable>
	<variable name="Season_PluSing">
